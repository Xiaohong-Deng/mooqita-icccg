<div id="game_attr">
  <table id="attributes">
    <tr>
      <th>Game Round: </th>
      <td><%= @game_player.round %></td>
    </tr>
    <tr>
      <th>Score: </th>
      <td><%= @game_player.score %></td>
    </tr>
    <tr>
      <th>Role: </th>
      <td><%= @game_player.role %></td>
    </tr>
    <% unless @game_player.role == "judge" %>
      <tr>
        <th>Questioner of this round: </th>
        <td>
          <% if @game_player.questioner? %>
            Yes
          <% else %>
            No
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= button_to "Next Round", game_path, method: :patch, class: "btn btn-lg btn-primary"%>
</div>

<% unless @document.nil? %>
  <div id="document">
    <header>
      <h2>Reading Text</h2>
    </header>

    <%= render @document %>
  </div>
<% end %>

<div class="panel panel-default">
  <div class="panel-body" id="current_question" data-game=<%= @game.id %>>
  </div>
</div>

<%= render partial: 'questions/question_form', locals: {question: @question, game: @game, round: @game_player.round}%>

<div class="panel panel-default">
  <div class="panel-body" id="current_answer" data-game=<%= @game.id %> >
  </div>
</div>

<%= render partial: 'answers/answer_form', locals: {answer: @answer, question: @question} %>

<div id="questions">
</div>

<div id="answers">
</div>
