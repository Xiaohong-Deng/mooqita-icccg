<table id="attributes">
  <tr>
    <th>Game Round: </th>
    <td><%= game_player.round %></td>
  </tr>
  <tr>
    <th>Score: </th>
    <td><%= game_player.score %></td>
  </tr>
  <tr>
    <th>Role: </th>
    <td><%= game_player.role %></td>
  </tr>
  <% if policy(game).show_questioner? %>
    <tr>
      <th>Questioner of this round: </th>
      <td>
        <% if game_player.questioner? %>
          Yes
        <% else %>
          No
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
